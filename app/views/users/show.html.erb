<div class="container">
  <div class="row">
    <%= render "books/sidebar", {user: @user, book: @book} %>
    <div class="col-1"></div>
    <div class="col-7">
      <div class="row">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @user_books.each do |book| %>
          <tbody>
            <tr>
              <td><%= image_tag @user.get_profile_image(100,100) %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>