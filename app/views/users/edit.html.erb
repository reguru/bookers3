<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <h2>User info</h2>

      <div id="error_explanation">
        <% if @user.errors.any? %>
          <h4><%= @user.errors.count %>error prohibited this obj from being saved:</h4>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @user do |f| %>
        <div>
          <%= f.label :Name %><br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="my-3">
          <%= f.label :Image %><br>
          <%= f.file_field :profile_image, accept: 'image/*' %>
        </div>
        <div>
          <%= f.label :Introduction %><br>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        <div class="my-3">
          <%= f.submit 'Update User', class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>