<div class="col-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row my-4">
    <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </div>
  <div>
    <h2>New book</h2>
    <%= form_with model: book, url: books_path, method: :post do |f| %>
      <div>
        <%= f.label :Title %><br>
        <%= f.text_field :title %>
      </div>

      <div class="mt-3">
        <%= f.label :Opinion %><br>
        <%= f.text_area :body %>
      </div>

      <div class="mt-2">
        <%= f.submit "Create Book", class: 'btn btn-sm btn-success' %>
      </div>
    <% end %>
  </div>
</div>
